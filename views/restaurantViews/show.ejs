<div class= "container">
  
  <div>
      <ul>
        <li><b>Name : </b> <%= restaurant.name%></li>
        <li><b>Overall Rating : </b> <%= restaurant.overall_rating%></li>
        <li><b>Latitude : </b> <%= restaurant.latitude%></li>
        <li><b>Longitude: </b> <%= restaurant.longitude%></li>
        <li><b>Greasy Rating : </b> <%= restaurant.greasy_rating%></li>
        <li><b>Tex Mex Rating: </b> <%= restaurant.tex_mex_rating%></li>
        <li><b>Artisanal Rating : </b> <%= restaurant.artisanal_rating%></li>
      </ul>
  
  </div>
    
  <form method="PATCH" action="/restaurants">
      <div class="form-group col-md-3">
        <input name="name"  class="form-control" placeholder="Name"/>
      </div>
      <div class="form-group col-md-3">
        <input name="overall_rating"  class="form-control" placeholder="Overall Rating"/>
      </div>
      <div class="form-group col-md-3">
        <input name="latitude"  class="form-control" placeholder="Latitude"/>
      </div>
      <div class="form-group col-md-3">
        <input name="longitude"  class="form-control" placeholder="Longitude"/>
      </div>
      <div class="form-group col-md-3">
        <input name="greasy_rating"  class="form-control" placeholder="Greasy"/>
      </div>
      <div class="form-group col-md-3">
        <input name="tex_mex_rating"  class="form-control" placeholder="Tex Mex"/>
      </div>
      <div class="form-group col-md-3">
        <input name="artisanal_rating"  class="form-control" placeholder="Artisanal"/>
      </div>
      <div class="form-group col-md-3">
          <input class="btn btn-primary col-md-12" type="submit" value="Submit">
      </div>

    </form>
</div>

